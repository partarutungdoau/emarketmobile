<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/background"
    tools:context=".LoginActivity">

    <!--<ImageView-->
        <!--android:id="@+id/imagelogin2"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="160dp"-->
        <!--android:layout_marginLeft="105dp"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:src="@drawable/man" />-->
    <EditText
        android:id="@+id/username_pem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Username" />

    <EditText
        android:id="@+id/password_pem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_pem"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/login_pem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/register_pem"
        android:layout_alignStart="@+id/register_pem"
        android:layout_below="@+id/password_pem"
        android:layout_marginTop="16dp"
        android:text="Login" />
    <Button
        android:id="@+id/register_pem"
        android:layout_below="@id/login_pem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:text="Register"/>
</RelativeLayout>