<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:background="@color/background"
    tools:context=".Pedagang.TambahProduk">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/judul"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Tambah Produk "/>


    <EditText
        android:layout_below="@+id/judul"
        android:id="@+id/nama_produk"
        android:hint="Nama Produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_below="@+id/nama_produk"
        android:id="@+id/kat_produk"
        android:hint="Kategori Produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_below="@+id/kat_produk"
        android:id="@+id/harga_produk"
        android:hint="Harga Produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_below="@+id/harga_produk"
        android:id="@+id/stok_produk"
        android:hint="Stok Produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Foto"
        android:id="@+id/buttonPilihPoto"
        android:layout_below="@+id/stok_produk"/>

   <ImageView
       android:id="@+id/gambar_produk"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_weight="1"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="15dp"
       android:layout_below="@+id/buttonPilihPoto"

       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambar_produk"
        android:hint="Judul Foto"
        android:layout_marginTop="20dp"
        android:id="@+id/image_title"
        />

    <Button
        android:id="@+id/simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_title"
        android:layout_toEndOf="@+id/judul"
        android:layout_toRightOf="@+id/judul"
        android:text="Simpan" />


    </ScrollView>

</RelativeLayout>